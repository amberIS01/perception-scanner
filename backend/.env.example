# Perception Scanner - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to git

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5173

# Review Fetching Settings
DEFAULT_REVIEW_COUNT=100
MAX_REVIEW_COUNT=1000

# Google Play Store (no API key needed)
GOOGLE_PLAY_LANGUAGE=en
GOOGLE_PLAY_COUNTRY=us

# iOS App Store (no API key needed)
IOS_APP_STORE_COUNTRY=us

# YouTube Data API v3
# Get your key from: https://console.cloud.google.com/apis/credentials
# Enable "YouTube Data API v3" in your project
YOUTUBE_API_KEY=

# Product Hunt API
# Get token from: https://api.producthunt.com/v2/docs
PRODUCT_HUNT_API_TOKEN=

# Reddit (no API key needed)
REDDIT_USER_AGENT=PerceptionScanner/1.0

# Request Settings
REQUEST_TIMEOUT=30

# Database
DATABASE_URL=sqlite:///./perception_scanner.db
